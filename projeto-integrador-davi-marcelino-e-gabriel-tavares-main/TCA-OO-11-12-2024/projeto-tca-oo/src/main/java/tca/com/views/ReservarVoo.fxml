<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="CENTER" hgap="15" vgap="15" style="-fx-background-color: #f5f5f5; -fx-pref-width: 600; -fx-pref-height: 500; -fx-padding: 30; -fx-border-color: #64b5f6; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tca.com.controllers.ReservarVooController">

    <Label text="Reservar Voo" GridPane.columnIndex="1" GridPane.columnSpan="2" 
        style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #0d47a1; -fx-alignment: CENTER;" />

    <Label text="Pesquisar Voo:" GridPane.rowIndex="1" style="-fx-text-fill: #1976d2; -fx-font-weight: bold;" />
    <TextField fx:id="txtBuscarVoo" onKeyReleased="#buscarVoos" prefHeight="35" prefWidth="320" 
        style="-fx-border-color: #1e88e5; -fx-border-radius: 10; -fx-background-radius: 10;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    
    <Label text="Selecione o Voo:" GridPane.rowIndex="2" style="-fx-text-fill: #1976d2; -fx-font-weight: bold;" />
    <ComboBox fx:id="cmbBoxVoo" prefHeight="35" prefWidth="320" 
        style="-fx-border-color: #1e88e5; -fx-border-radius: 10; -fx-background-radius: 10;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Pesquisar Passageiro:" GridPane.rowIndex="3" style="-fx-text-fill: #1976d2; -fx-font-weight: bold;" />
    <TextField fx:id="txtBuscarPassageiro" onKeyReleased="#buscarPassageiros" prefHeight="35" prefWidth="320" 
        style="-fx-border-color: #1e88e5; -fx-border-radius: 10; -fx-background-radius: 10;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    
    <Label text="Selecionar Passageiro:" GridPane.rowIndex="4" style="-fx-text-fill: #1976d2; -fx-font-weight: bold;" />
    <ComboBox fx:id="cmbBoxPassageiro" prefHeight="35" prefWidth="320" 
        style="-fx-border-color: #1e88e5; -fx-border-radius: 10; -fx-background-radius: 10;" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Data da Reserva:" GridPane.rowIndex="5" style="-fx-text-fill: #1976d2; -fx-font-weight: bold;" />
    <Label fx:id="labelDataHoraAtual" GridPane.columnIndex="1" GridPane.rowIndex="5" 
        style="-fx-text-fill: #1976d2; -fx-font-weight: bold;" />

    <HBox alignment="CENTER" spacing="20" GridPane.columnSpan="2" GridPane.rowIndex="6">
        <Button fx:id="btnReservar" onAction="#reservar" text="Reservar"
            style="-fx-background-color: #1565c0; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12; -fx-pref-width: 160; -fx-padding: 10;" />
        <Button fx:id="btnVoltar" onAction="#voltar" text="Voltar"
            style="-fx-background-color: #e57373; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12; -fx-pref-width: 160; -fx-padding: 10;" />
    </HBox>

    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" />
        <ColumnConstraints halignment="LEFT" />
        <ColumnConstraints halignment="LEFT" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints minHeight="50.0" />
        <RowConstraints minHeight="50.0" />
        <RowConstraints minHeight="50.0" />
        <RowConstraints minHeight="50.0" />
        <RowConstraints minHeight="50.0" />
        <RowConstraints minHeight="50.0" />
        <RowConstraints minHeight="60.0" />
    </rowConstraints>
</GridPane>